{
  "extends": "next/core-web-vitals",
  "plugins": ["unused-imports"],
  "rules": {
    "unused-imports/no-unused-imports": "error",
    "import/no-unused-modules": [
      1,
      { "unusedExports": true, "ignoreExports": ["./src/pages/**/*"] }
    ],
    "import/no-unresolved": [1],
    "import/named": [1]
  }
}
